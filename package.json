{
  "name": "identity-frontend",
  "version": "1.0.0-SNAPSHOT",
  "description": "Frontend for User sign-in and registration at the Guardian",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/guardian/identity-frontend.git"
  },
  "license": "Apache-2.0",
  "scripts": {
    "postinstall": "./tools/sync-githooks.js",
    "install": "npm run build",
    "build": "npm run build-css && npm run build-js",
    "prebuild-css": "mkdir -p ./target/web/build-npm",
    "build-css": "postcss public/main.css -o target/web/build-npm/bundle.css",
    "build-js": "webpack --bail --mode production",
    "watch-css": "postcss public/main.css -o target/web/public/main/bundle.css -w -m --verbose",
    "watch-js": "webpack --watch --mode development --devtool=inline-source-map -o ./target/web/public/main/main.bundle.js",
    "lint-css": "stylelint 'public/**/*.css'",
    "watch-assets": "concurrently --kill-others \"npm run watch-css\" \"npm run watch-js\"",
    "watch": "node ./tools/banner.js && concurrently --kill-others \"npm run watch-assets\" \"./start-frontend.sh\"",
    "fix": "prettier --write 'public/**/*.js' 'public/**/*.css'",
    "lint": "eslint 'public/**/*.js'",
    "flow": "flow"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-loader": "^7.1.4",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-preset-env": "^1.6.1",
    "chalk": "^2.3.2",
    "chalk-rainbow": "^1.0.0",
    "concurrently": "^3.5.1",
    "cssnano": "^3.10.0",
    "eslint": "^4.18.2",
    "eslint-plugin-prettier": "^2.6.0",
    "execa": "^0.9.0",
    "flow-bin": "^0.67.1",
    "normalize.css": "^3.0.3",
    "postcss-assets": "^5.0.0",
    "postcss-cli": "^5.0.0",
    "postcss-cssnext": "^3.1.0",
    "postcss-import": "^11.1.0",
    "postcss-strip-units": "^2.0.1",
    "precss": "^3.1.2",
    "prettier": "^1.11.1",
    "raw-loader": "^0.5.1",
    "stylelint": "^4.3.3",
    "webpack": "^4.1.0",
    "webpack-cli": "^2.0.10"
  },
  "dependencies": {
    "cookie-cutter": "^0.1.1",
    "curl-amd": "^0.8.12",
    "intl-tel-input": "^9.0.9",
    "jquery": "^3.1.0",
    "lodash": "^4.0.1",
    "lodash.mapvalues": "^4.6.0",
    "raven-js": "3.0.2"
  }
}
