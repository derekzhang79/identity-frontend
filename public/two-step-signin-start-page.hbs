{{# partial "pageTitle" }}{{ twoStepSignInPageText.pageTitle }}{{/ partial }}

{{# partial "content" }}

  <section class="layout-wrap-width">
    <div class="smartlock-trigger" data-csrf-token="{{ csrfToken.value }}" data-return-url="{{ returnUrl }}"></div>

    <div class="two-step-signin"><div class="two-step-signin__slide">

      <section class="layout-header">
        <h1 class="layout-header__title">{{ twoStepSignInPageText.title }}</h1>
      </section>

      {{> components/form/form-error-wrap }}

      <section class="two-step-signin-container">
        {{> components/two-step-signin/two-step-signin-email }}
      </section>

      <section class="layout-section">
        {{> components/terms/_terms-inline }}
        <p class="terms__text">
          {{twoStepSignInPageText.noAccount}}
          <a clas="terms__link" href="{{registerUrl}}" >{{twoStepSignInPageText.signUp}}</a>.
        </p>
      </section>

    </div></div>
  </section>

{{/partial}}

{{> layout}}
